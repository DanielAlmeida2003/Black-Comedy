<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.profile.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:id="@+id/settingsProfile"
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/lightred"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content">

                    <ImageButton

                        android:id="@+id/setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_settings_applications_24"
                        android:backgroundTint="@color/transparent"

                        ></ImageButton>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:cardBackgroundColor="@color/red"
                tools:ignore="MissingConstraints" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="20px"
                    android:layout_height="wrap_content">

                <LinearLayout

                    android:id="@+id/colunm1"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"

                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="0dp"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="5dp"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/profileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daniel Almeida"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        ></TextView>

                    <TextView
                        android:id="@+id/profileBio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bio"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:layout_marginBottom="10dp"
                        ></TextView>

                </LinearLayout>

                    <LinearLayout

                        android:id="@+id/colunm2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:minWidth="150dp"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:text="Followers"
                            android:textColor="@color/lightred"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/countFollowers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="100"
                            android:textSize="20dp"
                            android:textColor="@color/white"  />

                    </LinearLayout>

                    <LinearLayout

                        android:id="@+id/colunm3"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:minWidth="150dp"
                        android:layout_height="match_parent">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:text="Following"
                            android:textColor="@color/lightred"
                            android:textSize="15dp"
                            />

                        <TextView
                            android:id="@+id/countFollowings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="100"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/publicacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="Posts"
                android:padding="10dp"
                android:textSize="20dp"
                android:background="@color/lightred"
                android:layout_gravity="center"
                >
            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/jokesProfiles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                />





        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>